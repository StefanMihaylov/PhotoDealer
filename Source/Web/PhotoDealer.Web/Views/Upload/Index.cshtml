@using PhotoDealer.Web.ViewModels
@model  PictureViewModel

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-6 well">
        @using (Html.BeginForm("Index", "Upload", FormMethod.Post,
        new { @enctype = "multipart/form-data", id = "fileUploadForm", @class = "form form-horizontal" }))
        {
            <fieldset class="">
                <legend class="text-center">Upload New Photo</legend>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Title)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryGroup, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.CategoryGroupId)
                        @Html.ValidationMessageFor(m => m.CategoryGroupId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Category, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.CategoryId)
                        @Html.ValidationMessageFor(m => m.CategoryId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.Price)
                        @Html.ValidationMessageFor(m => m.Price)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TagString, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.TagString, new { htmlAttributes = new { @class = "form-control", placeholder = "Tag1, Tag2, Tag3" } })
                        @Html.ValidationMessageFor(m => m.TagString)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Choose File</label>
                    <div class="col-md-8">
                        <input type="file" name="file" id="file" class="form-control" data-val="true" data-val-required="The File field is required." />
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" value="Upload" class="btn btn-primary">
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary" })
                </div>
            </fieldset>
        }
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/dropdownlist.js" type="text/javascript"></script>
}
